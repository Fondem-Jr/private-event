<div class="alert alert-info"> Go to <strong>show</strong> for any event to <strong>register your attendance </strong> :) </div>

<table class="table table-hover table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Status</th>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Attendance expected</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <% if current_user %>
      <tr>
      <% if Time.now > event.date %>
        <td><p class="btn btn-danger">Past</p></td>
      <% else %>
        <td><p class="btn btn-info">Upcoming</p></td>
      <% end %>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <% if Time.now > event.date %>
          <td> Not available </td>
        <% else %>
          <td><%= Attendance.where(event_id: event.id).count %></td>
        <% end %>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event_path(event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    
    <% end %>
  </tbody>
</table>

<br>

